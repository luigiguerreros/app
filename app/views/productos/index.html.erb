<%= search_form_for @q do |f| %>
<p>
  <%= f.label :nombre_cont %>
  <%= f.search_field :nombre_cont %>
</p>
<p><%= f.submit %></p>
<% end %>
<h1>Listing productos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Desc</th>
      <th>Precio</th>
      <th>Precio publico</th>
      <th>Stock</th>
      <th>Unid med</th>
      <th>Marca</th>
      <th>Familia</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @productos.each do |producto| %>
      <tr>
        <td><%= producto.nombre %></td>
        <td><%= producto.desc %></td>
        <td><%= producto.precio %></td>
        <td><%= producto.precio_publico %></td>
        <td><%= producto.stock %></td>
        <td><%= producto.unid_med %></td>
        <td><%= producto.marca %></td>
        <td><%= producto.proveedor.familia if producto.proveedor %></td>
        <td><%= link_to 'Show', producto %></td>
        <td><%= link_to 'Edit', edit_producto_path(producto) %></td>
        <td><%= link_to 'Destroy', producto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

