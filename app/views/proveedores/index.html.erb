<h1>Listing proveedores</h1>

<table>
  <thead>
    <tr>
      <th>Razon social</th>
      <th>Familia</th>
      <th>Ruc</th>
      <th>Direccion</th>
      <th>Contacto</th>
      <th>Correo</th>
      <th>Web</th>
      <th>Celular</th>
      <th>Telefono</th>
      <th>Fax</th>
      <th>Cta banco</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @proveedores.each do |proveedor| %>
      <tr>
        <td><%= proveedor.razon_social %></td>
        <td><%= proveedor.familia %></td>
        <td><%= proveedor.ruc %></td>
        <td><%= proveedor.direccion %></td>
        <td><%= proveedor.contacto %></td>
        <td><%= proveedor.correo %></td>
        <td><%= proveedor.web %></td>
        <td><%= proveedor.celular %></td>
        <td><%= proveedor.telefono %></td>
        <td><%= proveedor.fax %></td>
        <td><%= proveedor.cta_banco %></td>
        <td><%= link_to 'Show', proveedor %></td>
        <td><%= link_to 'Edit', edit_proveedor_path(proveedor) %></td>
        <td><%= link_to 'Destroy', proveedor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

